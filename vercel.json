{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/auth/:path*",
      "destination": "/api/auth"
    },
    {
      "source": "/api/users/:path*",
      "destination": "/api/users"
    },
    {
      "source": "/api/courses/:path*",
      "destination": "/api/courses"
    },
    {
      "source": "/api/reports/:path*",
      "destination": "/api/reports"
    },
    {
      "source": "/api/settings/:path*",
      "destination": "/api/settings"
    },
    {
      "source": "/api/sessions/:path*",
      "destination": "/api/sessions"
    },
    {
      "source": "/api/attendance/:path*",
      "destination": "/api/attendance"
    },
    {
      "source": "/api/profesor/:path*",
      "destination": "/api/profesor/courses"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" }
      ]
    }
  ]
}
